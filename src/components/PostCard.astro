---
import { Picture } from 'astro:assets';
import { formatDate } from '../utils/helpers';
import type { ImageMetadata } from 'astro';

export interface Props {
  post: {
    slug: string;
    data: {
      title: string;
      description: string;
      date: Date;
      tags: string[];
      featuredImage?: ImageMetadata;
      location?: string;
    };
  };
  baseRoute: string;
  showLocation?: boolean;
}

const { post, baseRoute, showLocation = false } = Astro.props;
---

<article class="card p-6 md:p-8">
  <a href={`${baseRoute}/${post.slug}`} class="block group">
    <div class="flex flex-col md:flex-row gap-6">
      {post.data.featuredImage && (
        <div class="md:w-1/3 flex-shrink-0">
          <div class="featured-image-container">
            <Picture
              src={post.data.featuredImage}
              alt={post.data.title}
              width={800}
              height={450}
              formats={['avif', 'webp']}
              quality={80}
              class="w-full h-full object-cover"
              loading="lazy"
            />
          </div>
        </div>
      )}
      <div class="flex-1">
        <div class="flex flex-wrap gap-2 mb-3">
          {post.data.tags.slice(0, 3).map(tag => (
            <span class="tag-badge">
              {tag}
            </span>
          ))}
        </div>
        <h2 class="text-2xl md:text-3xl font-bold mb-2 group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors">
          {post.data.title}
        </h2>
        <p class="text-sm text-gray-600 dark:text-gray-400 mb-3">
          {showLocation && post.data.location && `${post.data.location} â€¢ `}
          {formatDate(post.data.date)}
        </p>
        <p class="text-gray-700 dark:text-gray-300 line-clamp-3">
          {post.data.description}
        </p>
      </div>
    </div>
  </a>
</article>
