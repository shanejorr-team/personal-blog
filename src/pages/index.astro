---
import { getCollection } from 'astro:content';
import { Image } from 'astro:assets';
import BaseLayout from '../layouts/BaseLayout.astro';
import { sortByDate, filterDrafts } from '../utils/helpers';
import { getImageByPath } from '../utils/imageLoader';
import { getHomepageFeatured, getCategoryNavigationPhotos, getPhotoPath, getPhotoAlt } from '../utils/db';

// Get hero photo from database
const heroPhoto = getHomepageFeatured();

// Get category navigation photos (one per category)
const categoryNavPhotos = getCategoryNavigationPhotos();

// Process hero photo
let heroWithDimensions = null;
if (heroPhoto) {
  const imagePath = getPhotoPath(heroPhoto);
  const importedImage = getImageByPath(imagePath);

  if (importedImage) {
    const aspectRatio = importedImage.width / importedImage.height;
    heroWithDimensions = {
      src: imagePath,
      alt: getPhotoAlt(heroPhoto),
      aspectRatio,
      importedImage,
    };
  }
}

// Process category navigation photos
const categoryNavWithDimensions = await Promise.all(
  categoryNavPhotos.map(async (photo) => {
    const imagePath = getPhotoPath(photo);

    // Get imported image from src/images
    const importedImage = getImageByPath(imagePath);

    if (!importedImage) {
      console.warn(`Could not find imported image for ${imagePath}`);
      return {
        src: imagePath,
        alt: getPhotoAlt(photo),
        category: photo.category,
        aspectRatio: 1.5,
        importedImage: undefined,
      };
    }

    // Get aspect ratio from imported image metadata
    const aspectRatio = importedImage.width / importedImage.height;

    return {
      src: imagePath,
      alt: getPhotoAlt(photo),
      category: photo.category,
      aspectRatio,
      importedImage,
    };
  })
);

// Get recent journal posts
const journalPosts = await getCollection('photography-journal');
const recentJournal = sortByDate(filterDrafts(journalPosts)).slice(0, 3);

// Get recent writings
const writings = await getCollection('writings');
const recentWritings = sortByDate(filterDrafts(writings)).slice(0, 3);
---

<BaseLayout
  title="Shane Orr - Photography & Stories"
  description="Capturing moments and stories through the lens. Explore photo journals, writings, and portfolio."
>
  <!-- Hero Section -->
  <section class="relative h-[80vh] min-h-[600px] overflow-hidden">
    {heroWithDimensions && (
      <Image
        src={heroWithDimensions.importedImage || heroWithDimensions.src}
        alt={heroWithDimensions.alt}
        width={3840}
        height={2160}
        format="webp"
        quality={85}
        class="absolute inset-0 w-full h-full object-cover"
        loading="eager"
      />
    )}
  </section>

  <!-- Photography Section -->
  {categoryNavWithDimensions.length > 0 && (
    <section class="container mx-auto px-4 py-16">
      <h2 class="text-3xl font-bold mb-8 text-center">Photography</h2>

      <!-- Category navigation grid -->
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
        {categoryNavWithDimensions.map((photo) => {
          // Map category to display names and URLs
          const categoryInfo = {
            nature: { name: 'Nature', url: '/portfolio/nature' },
            street: { name: 'Cities & Streets', url: '/portfolio/street' },
            concert: { name: 'Music', url: '/portfolio/concert' },
          }[photo.category];

          return (
            <a
              href={categoryInfo.url}
              class="group block overflow-hidden rounded-lg shadow-lg hover:shadow-xl transition-shadow"
            >
              <div class="aspect-[3/2] overflow-hidden bg-gray-200 dark:bg-gray-700">
                {photo.importedImage ? (
                  <Image
                    src={photo.importedImage}
                    alt={photo.alt}
                    width={800}
                    height={533}
                    format="webp"
                    quality={80}
                    class="w-full h-full object-cover transition-transform duration-300 group-hover:scale-105"
                    loading="lazy"
                  />
                ) : (
                  <img
                    src={photo.src}
                    alt={photo.alt}
                    class="w-full h-full object-cover transition-transform duration-300 group-hover:scale-105"
                    loading="lazy"
                  />
                )}
              </div>
              <div class="py-4 text-center">
                <h3 class="text-xl font-semibold group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors">
                  {categoryInfo.name}
                </h3>
              </div>
            </a>
          );
        })}
      </div>

      <!-- Browse by country link -->
      <div class="text-center">
        <h2 class="text-3xl font-bold">
          <a
            href="/portfolio/all-countries"
            class="hover:text-blue-600 dark:hover:text-blue-400 transition-colors"
          >
            Or browse by country
          </a>
        </h2>
      </div>
    </section>
  )}

  <!-- Two-Column Content Section -->
  <section class="bg-gray-50 dark:bg-gray-800 py-16">
    <div class="container mx-auto px-4">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
        <!-- Photography Journal -->
        <div>
          <div class="flex items-center justify-between mb-6">
            <h2 class="text-3xl font-bold">Photography Journal</h2>
            <a href="/journal" class="text-blue-600 dark:text-blue-400 hover:underline text-sm font-medium">
              View All →
            </a>
          </div>
          <p class="text-gray-600 dark:text-gray-400 mb-6">
            Travel stories and photo essays from around the world
          </p>
          <div class="space-y-6">
            {recentJournal.map((post) => (
              <article class="card p-4">
                <a href={`/journal/${post.slug}`} class="block">
                  {post.data.featuredImage && (
                    <div class="w-full aspect-[16/9] rounded-lg mb-4 overflow-hidden bg-transparent">
                      <Image
                        src={post.data.featuredImage}
                        alt={post.data.title}
                        width={800}
                        height={450}
                        format="webp"
                        quality={80}
                        class="w-full h-full object-cover"
                        loading="lazy"
                      />
                    </div>
                  )}
                  <h3 class="text-xl font-semibold mb-2 hover:text-blue-600 dark:hover:text-blue-400 transition-colors">
                    {post.data.title}
                  </h3>
                  <p class="text-sm text-gray-600 dark:text-gray-400 mb-2">
                    {post.data.location && `${post.data.location} • `}
                    {post.data.date.toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}
                  </p>
                  <p class="text-gray-700 dark:text-gray-300 line-clamp-2">
                    {post.data.description}
                  </p>
                </a>
              </article>
            ))}
          </div>
        </div>

        <!-- Other Writings -->
        <div>
          <div class="flex items-center justify-between mb-6">
            <h2 class="text-3xl font-bold">Other Writings</h2>
            <a href="/writings" class="text-blue-600 dark:text-blue-400 hover:underline text-sm font-medium">
              View All →
            </a>
          </div>
          <p class="text-gray-600 dark:text-gray-400 mb-6">
            Thoughts, tutorials, and general musings
          </p>
          <div class="space-y-6">
            {recentWritings.map((post) => (
              <article class="card p-4">
                <a href={`/writings/${post.slug}`} class="block">
                  {post.data.featuredImage && (
                    <div class="w-full aspect-[16/9] rounded-lg mb-4 overflow-hidden bg-transparent">
                      <Image
                        src={post.data.featuredImage}
                        alt={post.data.title}
                        width={800}
                        height={450}
                        format="webp"
                        quality={80}
                        class="w-full h-full object-cover"
                        loading="lazy"
                      />
                    </div>
                  )}
                  <h3 class="text-xl font-semibold mb-2 hover:text-blue-600 dark:hover:text-blue-400 transition-colors">
                    {post.data.title}
                  </h3>
                  <p class="text-sm text-gray-600 dark:text-gray-400 mb-2">
                    {post.data.date.toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}
                  </p>
                  <p class="text-gray-700 dark:text-gray-300 line-clamp-2">
                    {post.data.description}
                  </p>
                </a>
              </article>
            ))}
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Call to Action -->
  <section class="container mx-auto px-4 py-16 text-center">
    <h2 class="text-3xl font-bold mb-4">Explore My Photography</h2>
    <p class="text-gray-600 dark:text-gray-400 mb-8 max-w-2xl mx-auto">
      Browse through curated collections of nature, street, and concert photography
    </p>
    <a href="/portfolio" class="btn btn-primary">
      View Full Portfolio
    </a>
  </section>
</BaseLayout>
