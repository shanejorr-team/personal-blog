---
import { getCollection } from 'astro:content';
import { Image, getImage } from 'astro:assets';
import BaseLayout from '../layouts/BaseLayout.astro';
import Lightbox from '../components/Lightbox.astro';
import { sortByDate, filterDrafts } from '../utils/helpers';
import { getImageByPath } from '../utils/imageLoader';
import { getHomepageFeatured, getPhotoPath, getPhotoAlt } from '../utils/db';

// Get featured photos from database
const featuredPhotos = getHomepageFeatured();

const featuredWithDimensions = await Promise.all(
  featuredPhotos.map(async (photo) => {
    const imagePath = getPhotoPath(photo);

    // Get imported image from src/images
    const importedImage = getImageByPath(imagePath);

    if (!importedImage) {
      console.warn(`Could not find imported image for ${imagePath}`);
      return {
        src: imagePath,
        alt: getPhotoAlt(photo),
        caption: photo.caption,
        location: photo.location,
        aspectRatio: 1.5,
        lightboxSrc: imagePath,
        originalSrc: imagePath,
        importedImage: undefined,
      };
    }

    // Get aspect ratio from imported image metadata
    const aspectRatio = importedImage.width / importedImage.height;

    // Generate optimized lightbox version (skip for SVG files)
    const isSvg = imagePath.toLowerCase().endsWith('.svg');
    let lightboxSrc = imagePath;

    if (!isSvg) {
      try {
        // Calculate target height based on aspect ratio
        const targetHeight = Math.round(1920 / aspectRatio);

        const lightboxImage = await getImage({
          src: importedImage,
          width: 1920,
          height: targetHeight,
          format: 'webp',
          quality: 85,
        });
        lightboxSrc = lightboxImage.src;
      } catch (error) {
        console.warn(`Could not optimize lightbox image for ${imagePath}:`, error.message);
        // Fall back to original image
        lightboxSrc = imagePath;
      }
    }

    return {
      src: imagePath,
      alt: getPhotoAlt(photo),
      caption: photo.caption,
      location: photo.location,
      country: photo.country,
      aspectRatio,
      lightboxSrc,
      originalSrc: imagePath,
      importedImage,
    };
  })
);
const sortedFeatured = featuredWithDimensions;

// Get recent journal posts
const journalPosts = await getCollection('photography-journal');
const recentJournal = sortByDate(filterDrafts(journalPosts)).slice(0, 3);

// Get recent writings
const writings = await getCollection('writings');
const recentWritings = sortByDate(filterDrafts(writings)).slice(0, 3);
---

<BaseLayout
  title="Shane Orr - Photography & Stories"
  description="Capturing moments and stories through the lens. Explore photo journals, writings, and portfolio."
>
  <!-- Hero Section -->
  <section class="relative h-[80vh] min-h-[600px] overflow-hidden">
    <div class="absolute inset-0 bg-gradient-to-b from-black/50 to-black/20 z-10"></div>

    {sortedFeatured.length > 0 && (
      <Image
        src={sortedFeatured[0].importedImage || sortedFeatured[0].src}
        alt={sortedFeatured[0].alt}
        width={3840}
        height={2560}
        format="webp"
        quality={85}
        class="absolute inset-0 w-full h-full object-cover"
        loading="eager"
      />
    )}

    <div class="relative z-20 h-full flex items-center justify-center text-center px-4">
      <div class="max-w-4xl">
        <!--
        <h1 class="text-5xl md:text-7xl font-bold text-white mb-6 text-balance">
          Capturing Life Through the Lens
        </h1>
        -->
        <p class="text-xl md:text-2xl text-gray-200 mb-8 text-balance">
          Photo journal, portfolio, and creative explorations
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href="/journal" class="btn btn-primary">
            Photo Stories & Writings
          </a>
          <a href="/portfolio" class="btn bg-white text-gray-900 hover:bg-gray-100">
            View Portfolio
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Featured Work Grid -->
  {sortedFeatured.length > 1 && (
    <section class="container mx-auto px-4 py-16">
      <h2 class="text-3xl font-bold mb-8 text-center">Featured Work</h2>
      <!-- Justified grid layout -->
      <div class="flex flex-wrap gap-4 justify-start">
        {sortedFeatured.slice(1, 7).map((photo, index) => {
          // Calculate flex-basis based on aspect ratio
          // Target row height of ~280px, adjust width based on aspect ratio
          const targetHeight = 280;
          const flexBasis = targetHeight * photo.aspectRatio;

          return (
            <button
              type="button"
              class="featured-photo group relative overflow-hidden rounded-lg text-left border-0 p-0 bg-transparent flex-grow-0"
              style={`flex-basis: ${flexBasis}px; height: ${targetHeight}px;`}
              data-index={index}
              data-lightbox-src={photo.lightboxSrc}
              data-original-src={photo.originalSrc}
              data-alt={photo.alt}
              data-title={photo.caption || photo.alt}
              data-location-name={photo.location || ''}
              data-country-name={photo.country || ''}
              data-description={photo.caption || ''}
            >
              <Image
                src={photo.importedImage || photo.src}
                alt={photo.alt}
                width={Math.round(flexBasis * 2)}
                height={Math.round(targetHeight * 2)}
                format="webp"
                quality={80}
                class="w-full h-full object-cover rounded-lg transition-transform duration-300 group-hover:scale-110"
                loading="lazy"
              />
              <div class="absolute inset-0 bg-gradient-to-t from-black/70 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300 rounded-lg">
                <div class="absolute bottom-0 left-0 right-0 p-4 text-white">
                  <h3 class="font-semibold text-lg">{photo.caption || photo.alt}</h3>
                  {(photo.location || photo.country) && (
                    <p class="text-sm text-gray-300">
                      {[photo.location, photo.country].filter(Boolean).join(', ')}
                    </p>
                  )}
                </div>
              </div>
            </button>
          );
        })}
      </div>
    </section>
  )}

  <!-- Two-Column Content Section -->
  <section class="bg-gray-50 dark:bg-gray-800 py-16">
    <div class="container mx-auto px-4">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
        <!-- Photography Journal -->
        <div>
          <div class="flex items-center justify-between mb-6">
            <h2 class="text-3xl font-bold">Photography Journal</h2>
            <a href="/journal" class="text-blue-600 dark:text-blue-400 hover:underline text-sm font-medium">
              View All →
            </a>
          </div>
          <p class="text-gray-600 dark:text-gray-400 mb-6">
            Travel stories and photo essays from around the world
          </p>
          <div class="space-y-6">
            {recentJournal.map((post) => (
              <article class="card p-4">
                <a href={`/journal/${post.slug}`} class="block">
                  {post.data.featuredImage && (
                    <div class="w-full aspect-[16/9] rounded-lg mb-4 overflow-hidden bg-transparent">
                      <Image
                        src={post.data.featuredImage}
                        alt={post.data.title}
                        width={800}
                        height={450}
                        format="webp"
                        quality={80}
                        class="w-full h-full object-cover"
                        loading="lazy"
                      />
                    </div>
                  )}
                  <h3 class="text-xl font-semibold mb-2 hover:text-blue-600 dark:hover:text-blue-400 transition-colors">
                    {post.data.title}
                  </h3>
                  <p class="text-sm text-gray-600 dark:text-gray-400 mb-2">
                    {post.data.location && `${post.data.location} • `}
                    {post.data.date.toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}
                  </p>
                  <p class="text-gray-700 dark:text-gray-300 line-clamp-2">
                    {post.data.description}
                  </p>
                </a>
              </article>
            ))}
          </div>
        </div>

        <!-- Other Writings -->
        <div>
          <div class="flex items-center justify-between mb-6">
            <h2 class="text-3xl font-bold">Other Writings</h2>
            <a href="/writings" class="text-blue-600 dark:text-blue-400 hover:underline text-sm font-medium">
              View All →
            </a>
          </div>
          <p class="text-gray-600 dark:text-gray-400 mb-6">
            Thoughts, tutorials, and general musings
          </p>
          <div class="space-y-6">
            {recentWritings.map((post) => (
              <article class="card p-4">
                <a href={`/writings/${post.slug}`} class="block">
                  {post.data.featuredImage && (
                    <div class="w-full aspect-[16/9] rounded-lg mb-4 overflow-hidden bg-transparent">
                      <Image
                        src={post.data.featuredImage}
                        alt={post.data.title}
                        width={800}
                        height={450}
                        format="webp"
                        quality={80}
                        class="w-full h-full object-cover"
                        loading="lazy"
                      />
                    </div>
                  )}
                  <h3 class="text-xl font-semibold mb-2 hover:text-blue-600 dark:hover:text-blue-400 transition-colors">
                    {post.data.title}
                  </h3>
                  <p class="text-sm text-gray-600 dark:text-gray-400 mb-2">
                    {post.data.date.toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}
                  </p>
                  <p class="text-gray-700 dark:text-gray-300 line-clamp-2">
                    {post.data.description}
                  </p>
                </a>
              </article>
            ))}
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Call to Action -->
  <section class="container mx-auto px-4 py-16 text-center">
    <h2 class="text-3xl font-bold mb-4">Explore My Photography</h2>
    <p class="text-gray-600 dark:text-gray-400 mb-8 max-w-2xl mx-auto">
      Browse through curated collections of nature, street, and concert photography
    </p>
    <a href="/portfolio" class="btn btn-primary">
      View Full Portfolio
    </a>
  </section>

  <!-- Lightbox Component -->
  <Lightbox />
</BaseLayout>

<style>
  /* Featured photo responsive behavior */
  .featured-photo {
    cursor: default;
    background: transparent;
  }

  /* Desktop and tablet: make clickable with pointer cursor and hover effects */
  @media (min-width: 768px) {
    .featured-photo {
      cursor: pointer;
    }
  }

  /* Mobile: disable hover effects */
  @media (max-width: 767px) {
    .featured-photo .group-hover\:scale-110 {
      transform: scale(1) !important;
    }

    .featured-photo .group-hover\:opacity-100 {
      opacity: 0 !important;
    }
  }
</style>

<script>
  // Responsive lightbox behavior - only enable on desktop/tablet
  function initFeaturedPhotos() {
    const featuredPhotoButtons = document.querySelectorAll('.featured-photo');

    // Collect all photos data into an array
    const photosData = Array.from(featuredPhotoButtons).map((button) => {
      const btn = button as HTMLButtonElement;
      const locationParts = [btn.dataset.locationName, btn.dataset.countryName]
        .filter(Boolean);

      return {
        image: btn.dataset.lightboxSrc || '',
        original: btn.dataset.originalSrc || '',
        alt: btn.dataset.alt || '',
        title: btn.dataset.title || '',
        location: locationParts.join(', '),
        description: btn.dataset.description || '',
      };
    });

    // Add click handlers
    featuredPhotoButtons.forEach((photo) => {
      photo.addEventListener('click', (e) => {
        // Only open lightbox on desktop/tablet (>= 768px)
        if (window.innerWidth >= 768) {
          const button = e.currentTarget as HTMLButtonElement;
          const clickedIndex = parseInt(button.dataset.index || '0', 10);

          if ((window as any).openLightbox && photosData.length > 0) {
            (window as any).openLightbox(photosData, clickedIndex);
          }
        }
      });
    });
  }

  // Initialize on page load
  initFeaturedPhotos();

  // Re-initialize on navigation (for Astro view transitions)
  document.addEventListener('astro:page-load', initFeaturedPhotos);
</script>
