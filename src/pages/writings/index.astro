---
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';
import Breadcrumbs from '../../components/Breadcrumbs.astro';
import { sortByDate, filterDrafts, getUniqueTags } from '../../utils/helpers';

// Get all writings
const allPosts = await getCollection('writings');
const posts = sortByDate(filterDrafts(allPosts));
const tags = getUniqueTags(posts);

// Get filter from URL
const currentTag = Astro.url.searchParams.get('tag');
const filteredPosts = currentTag
  ? posts.filter(post => post.data.tags.includes(currentTag))
  : posts;
---

<BaseLayout
  title="Other Writings - Blog Posts & Articles"
  description="Thoughts, tutorials, and musings on photography, technology, and life."
>
  <div class="container mx-auto px-4 py-12">
    <Breadcrumbs items={[{ label: 'Other Writings' }]} />

    <!-- Header -->
    <div class="text-center mb-12">
      <h1 class="text-4xl md:text-5xl font-bold mb-4">Other Writings</h1>
      <p class="text-xl text-gray-600 dark:text-gray-400 max-w-2xl mx-auto">
        Thoughts, tutorials, and general musings
      </p>
    </div>

    <!-- Tags Filter -->
    {tags.length > 0 && (
      <div class="mb-8">
        <div class="flex flex-wrap gap-2 justify-center">
          <a
            href="/writings"
            class={`px-4 py-2 rounded-full text-sm font-medium transition-colors ${
              !currentTag
                ? 'bg-blue-600 text-white'
                : 'bg-gray-200 dark:bg-gray-700 hover:bg-gray-300 dark:hover:bg-gray-600'
            }`}
          >
            All
          </a>
          {tags.map(tag => (
            <a
              href={`/writings?tag=${encodeURIComponent(tag)}`}
              class={`px-4 py-2 rounded-full text-sm font-medium transition-colors ${
                currentTag === tag
                  ? 'bg-blue-600 text-white'
                  : 'bg-gray-200 dark:bg-gray-700 hover:bg-gray-300 dark:hover:bg-gray-600'
              }`}
            >
              {tag}
            </a>
          ))}
        </div>
      </div>
    )}

    <!-- Posts List -->
    {filteredPosts.length === 0 ? (
      <div class="text-center py-12">
        <p class="text-gray-600 dark:text-gray-400">No posts found.</p>
      </div>
    ) : (
      <div class="max-w-4xl mx-auto space-y-8">
        {filteredPosts.map(post => (
          <article class="card p-6 md:p-8">
            <a href={`/writings/${post.slug}`} class="block group">
              <div class="flex flex-col md:flex-row gap-6">
                {post.data.featuredImage && (
                  <div class="md:w-1/3 flex-shrink-0">
                    <img
                      src={post.data.featuredImage}
                      alt={post.data.title}
                      class="w-full aspect-[16/9] object-cover rounded-lg"
                    />
                  </div>
                )}
                <div class="flex-1">
                  <div class="flex flex-wrap gap-2 mb-3">
                    {post.data.tags.slice(0, 3).map(tag => (
                      <span class="text-xs px-2 py-1 bg-blue-100 dark:bg-blue-900/30 text-blue-600 dark:text-blue-400 rounded">
                        {tag}
                      </span>
                    ))}
                  </div>
                  <h2 class="text-2xl md:text-3xl font-bold mb-2 group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors">
                    {post.data.title}
                  </h2>
                  <p class="text-sm text-gray-600 dark:text-gray-400 mb-3">
                    {post.data.date.toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}
                  </p>
                  <p class="text-gray-700 dark:text-gray-300 line-clamp-3">
                    {post.data.description}
                  </p>
                </div>
              </div>
            </a>
          </article>
        ))}
      </div>
    )}
  </div>
</BaseLayout>
